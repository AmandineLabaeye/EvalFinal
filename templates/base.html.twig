<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ title }}{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body id="main">
<header>
    <nav>
        <div id="hamburger-menu">
            <span>...</span>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('home') }}"> Home </a>
                <a href="{{ path('articles_new') }}"> Add one article</a>
                <a href="{{ path('logout') }}">Logout</a>
            {% elseif is_granted('ROLE_ADMIN') %}
                <a href="{{ path('home') }}"> Home </a>
                <a href="{{ path('articles_new') }}"> Add one article</a>
                <a href="{{ path('admin') }}"> Panel Admin </a>
                <a href="{{ path('logout') }}">Logout</a>
            {% else %}
                <a href="{{ path('home') }}"> Home </a>
                <a href="{{ path('users_new') }}"> Registration </a>
                <a href="{{ path('login') }}">Login</a>
            {% endif %}
        </div>
    </nav>
</header>
{% block body %}{% endblock %}
<footer></footer>
{% block javascripts %}
    <script src="{{ asset('js/script.js') }}"></script>
{% endblock %}
</body>
</html>
