{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Username</th>
            <td>{{ user.username }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ user.name }}</td>
        </tr>
        <tr>
            <th>Surname</th>
            <td>{{ user.surname }}</td>
        </tr>
        <tr>
            <th>Age</th>
            <td>{{ user.age }}</td>
        </tr>
        <tr>
            <th>Users_level</th>
            <td>{{ user.usersLevel }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{{ user.active ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>
    <br>
    {{ include('users/_delete_form.html.twig') }}
    <table>
        <tr>
            <td>
                <a href="{{ path('users_all') }}">back to list</a>
            </td>
            <td>
                <a href="{{ path('users_edit', {'id': user.id}) }}">edit</a>
            </td>
        </tr>
    </table>
{% endblock %}
