{% extends 'base.html.twig' %}

{% block title %}Commentaires{% endblock %}

{% block body %}
    <h1>Commentaires</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ comment.id }}</td>
        </tr>
        <tr>
            <th>Comment</th>
            <td>{{ comment.content }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ comment.date }}</td>
        </tr>
        <tr>
            <th>Active</th>
            <td>{{ comment.active ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>
    <br>
    {{ include('comments/_delete_form.html.twig') }}

    <table>
        <tr>
            <td>
                <a href="{{ path('comments_all') }}">back to list</a>
            </td>
            <td>
                <a href="{{ path('comments_edit', {'id': comment.id}) }}">edit</a>
            </td>
        </tr>
    </table>
{% endblock %}
